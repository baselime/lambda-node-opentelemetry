{
  "compilerOptions": {
      "module": "nodenext",
      "allowImportingTsExtensions": true,
      "declaration": true,
      "moduleResolution": "nodenext",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}